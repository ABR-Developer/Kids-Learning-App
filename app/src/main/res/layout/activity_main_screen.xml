    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="616dp"
        android:layout_height="1121dp"
        android:contentDescription="@string/First_Background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/school" />

    <Button
        android:id="@+id/repositoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repository_link"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:backgroundTint="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizButton" />

    <Button
        android:id="@+id/quizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goto_quiz"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:backgroundTint="#00000000"
        app:layout_constraintBottom_toTopOf="@+id/repositoryButton"
        app:layout_constraintEnd_toEndOf="@+id/repositoryButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/repositoryButton"
        app:layout_constraintTop_toBottomOf="@+id/tutorialButton" />

    <Button
        android:id="@+id/tutorialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goto_tutorial"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:backgroundTint="#00000000"
        app:layout_constraintBottom_toTopOf="@+id/quizButton"
        app:layout_constraintEnd_toEndOf="@+id/quizButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/quizButton"
        app:layout_constraintTop_toTopOf="parent" />

